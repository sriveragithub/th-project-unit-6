extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box

        h1= data.project_name

        p= data.description

      .project-tech-links-box.box
        h6 Technologies
        ul
          each skill in data.technologies
            li= skill

        a.btn-link(href=`${data.live_link}`) Live Demo
        a.btn-link(href=`${data.github_link}`) GitHub Repo

    .project-img-box.box

      img.project-img(src=`${data.image_urls[1]}`, alt='')

    nav.nav
      a(href='/')
        span &larr;
        |  Back
